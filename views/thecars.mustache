<header>
  <h1>The Car Collection</h1>
</header>
<article>
  {{^cars}}
  <a class="content" href="{{id}}"></a>
  <div class="eachCar">
    <h3>{{year}} {{make}} {{model}}</h3>
    <ul>
      <li>Color: {{color}}</li>
      <li>Cylinders: {{cylinders}}</li>
      <li>Displacement: {{displacement}}</li>
    </ul>
    <button type="submit" name="Edit">Edit Car</button>
    <button type="submit" name="Delete">Delete Car</button>
  </div>
{{/cars}}
</article>
<aside>
  <h2>Add a Car</h2>
  <form action="/" method="post">
    <input type="text" name="make" placeholder="Make">
    <br>
    <input type="text" name="model" placeholder="Model">
    <br>
    <input type="number" name="year" placeholder="Year">
    <br>
    <p>Engine Details</p>
    <input type="number" name="cylinders" placeholder="# of Cylinders">
    <br>
    <input type="text" name="displacement" placeholder="Displacement in Liters">
    <br>
    <button type="submit" name="button">Add Car</button>
  </form>
</aside>
